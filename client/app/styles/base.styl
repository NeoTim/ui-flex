*, *::befor, *::after
  box-sizing border-box

html
  margin 0
  padding 0
  font-weight: 700
  font-size: 3em
  line-height: 1
  -webkit-font-kerning: normal

body
  margin 0
  padding 0

main, section, div, header,footer,aside
  max-width 100%
  max-height 100%
  margin 0
  padding 0

h1
  margin: 0 0 0.5em
  font-weight: 700
  font-size: 3em
  line-height: 1
  -webkit-font-kerning: normal


h2
  margin: 0 0 1em
  font: 700 1.3em "ff-tisa-web-pro", serif
  -webkit-font-kerning: normal

h3
  margin: 0 0 1em
  font-size: 1em
